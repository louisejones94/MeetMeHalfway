<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: "my-6 w-100") do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

  <div class="field form-group row mb-3">
    <%= f.label :name, class: "col-sm-4 col-form-label" %>
    <div class="col-sm-6">
      <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control" %>
    </div>
  </div>
  
  <div class="field form-group row mb-3">
    <%= f.label :email, class: "col-sm-4 col-form-label" %><br />
    <div class="col-sm-6">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
    </div>
  </div>

  <div class="field form-group row mb-3">
    <%= f.label :password, class: "col-sm-4 col-form-label" %>
    <div class="col-sm-6">
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
    </div>
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
  </div>

  <div class="field form-group row mb-3">
    <%= f.label :password_confirmation, class: "col-sm-4 col-form-label" %>
    <div class="col-sm-6">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class: "btn btn-primary" %>
  </div>
<% end %>

<%= render "users/shared/links" %>
