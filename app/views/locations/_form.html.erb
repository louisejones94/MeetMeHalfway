<%= form_with(model: [current_user, @meeting, @location]) do |f| %>
    
    <% if @location.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@location.errors.count, "error") %> prohibited this location from being saved:</h2>
      <ul>
        <% @location.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
    
    <div class="field form-group row mb-3">
        <%= f.label :name, "Name" %>
        <%= f.text_field :name %>
    </div>

    <div class="field form-group row mb-3">
        <%= f.label :type, "Location Type" %>
        <%= f.text_field :type %>
    </div>

    <div class="field form-group row mb-3">
        <%= f.label :address, "Address" %>
        <%= f.text_field :address, class: "form-control" %>
    </div>

    <div class="field form-group row mb-3">
        <%= f.label :latitude, "Latitude" %>
        <%= f.text_field :latitude, class: "form-control" %>
    </div>

    <div class="field form-group row mb-3">
        <%= f.label :longitude, "Longitude" %>
        <%= f.text_field :longitude, class: "form-control" %>
    </div>

    <div class="field form-group row mb-3">
        <%= f.label :distance_from_halfway, "Distance from Halfway (metres)" %>
        <%= f.number_field :distance_from_halfway, class: "form-control" %>
    </div>

    <div class="field form-group row mb-3">
        <%= f.label :time_from_halfway, "Time from Halfway (minutes)" %>
        <%= f.number_field :time_from_halfway, class: "form-control" %>
    </div>

    <%= f.submit "Submit", class: "button" %>
<% end %>